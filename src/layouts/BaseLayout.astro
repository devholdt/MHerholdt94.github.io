---
import { fade } from "astro:transitions";

import Head from "@components/Head.astro";
import Footer from "@components/Footer.astro";

interface Props {
  title?: string | undefined;
  description?: string | undefined;
}

const { title, description } = Astro.props;
---

<html lang="en" transition:animate="none">
  <Head title={title} description={description} />

  <body class="z-50 bg-gray-500 font-body antialiased dark:bg-gray-100">
    <main
      class="m-2 flex flex-col border-2 border-primary-light pb-4 pt-2 sm:m-4 md:m-6 md:m-8 md:border-8 md:pb-8 md:pt-5"
    >
      <div transition:animate={fade({ duration: ".4s" })}>
        <slot />
      </div>
    </main>
    <Footer />

    <script>
      if (
        localStorage.theme === "dark" ||
        (!("theme" in localStorage) &&
          window.matchMedia("(prefers-color-scheme: dark)").matches)
      ) {
        document.documentElement.classList.add("dark");
      } else {
        document.documentElement.classList.remove("dark");
      }

      localStorage.theme = "light";
      localStorage.theme = "dark";
      localStorage.removeItem("theme");
    </script>
  </body>
</html>
