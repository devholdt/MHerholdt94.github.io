---
import Icon from "./Icon.astro";
import CallToAction from "./CallToAction.astro";
const currentYear = new Date().getFullYear();
---

<footer
  class="bg-shade dark:bg-shade text-gray-100 dark:text-gray-400 border-t border-grey px-8 py-6 sm:px-16 sm:py-12"
>
  <div class="flex flex-col justify-between">
    <div class="text-left">
      <h2>Contact</h2>
      <p>mathiasbherholdt@gmail.com</p>
    </div>
    <div class="w-fit mt-3">
      <CallToAction href="mailto:mathiasbherholdt@gmail.com">
        message me
        <Icon icon="paper-plane-tilt" size="1.2em" />
      </CallToAction>
    </div>
    <hr class="my-5" />
  </div>

  <div class="flex justify-between">
    <div class="hidden sm:block">
      <h3 class="text-sm">You can also find me here</h3>
      <p>
        <a
          class="text-sm text-gray-300 dark:text-primary-lighter"
          href="https://github.com/mherholdt94"
        >
          GitHub</a
        >
      </p>
      <p>
        <a
          class="text-sm text-gray-300 dark:text-primary-lighter"
          href="https://twitter.com/harboldtt"
        >
          Twitter</a
        >
      </p>
    </div>
    <div class="group text-nowrap mt-auto">
      <p>&copy;{currentYear} Mathias B. Herholdt</p>
    </div>
  </div>
</footer>

<style>
  footer a {
    text-decoration: 1px solid underline transparent;
    text-underline-offset: 0.25em;
    transition: text-decoration-color 0.2s ease-in-out;
  }

  footer a:hover,
  footer a:focus {
    text-decoration-color: currentColor;
  }

  .group {
    display: flex;
    flex-direction: column;
    gap: 0.5rem;
  }

  @media (min-width: 768px) {
    .group {
      flex-direction: row;
      gap: 1rem;
      flex-wrap: wrap;
    }
  }
</style>
